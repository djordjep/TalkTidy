{
  "manifest_version": 3,
  "name": "TalkTidy",
  "version": "1.0",
  "description": "Get clean, concise summaries of long talks or videos from YouTube",
  "permissions": [
    "activeTab",
    "scripting",
    "identity",
    "offscreen",
    "declarativeNetRequest",
    "identity.email"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.cloudfunctions.net/*",
    "https://*.firebaseio.com/*",
    "https://*.googleapis.com/*",
    "https://us-central1-talktidy-ab88f.cloudfunctions.net/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "firebase-app.js",
        "firebase-auth.js",
        "firebase-init.js",
        "auth.html",
        "paywall.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "oauth2": {
    "client_id": "GOOGLE_OAUTH_CLIENT_ID",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' https://*.googleapis.com https://*.firebaseio.com"
  }
}